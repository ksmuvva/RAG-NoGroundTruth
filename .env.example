# RAG API Configuration (Azure OpenAI based)
# The RAG API endpoint that serves your document retrieval and query system
RAG_API_BASE_URL=http://localhost:8000
RAG_API_KEY=your_rag_api_key

# Azure OpenAI Configuration (for both RAG API backend and evaluation LLMs)
# These credentials are used by the evaluation framework (RAGAS/DeepEval)
# and also power the RAG API's language model
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Optional: Alternative OpenAI configuration if not using Azure
# OPENAI_API_KEY=your_openai_key
